<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input"
    android:layout_margin="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/form_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#212A5C"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:padding="10sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/fullname_text"
        android:layout_below="@id/form_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/address_text"
        android:layout_below="@id/fullname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/mobile_number_text"
        android:layout_below="@id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/loan_category_text"
        android:layout_below="@id/mobile_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/ca_service_text"
        android:layout_below="@id/loan_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/engineer_building_text"
        android:layout_below="@id/ca_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/engineer_service_text"
        android:layout_below="@id/engineer_building_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/tenure_text"
        android:layout_below="@id/engineer_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/saving_amount_text"
        android:layout_below="@id/tenure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/loan_type_text"
        android:layout_below="@id/saving_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/loan_amount_text"
        android:layout_below="@id/loan_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/addedBy"
        android:layout_below="@id/loan_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/addedUser"
        android:layout_below="@id/addedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/addedDate"
        android:layout_below="@id/addedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

</RelativeLayout>
