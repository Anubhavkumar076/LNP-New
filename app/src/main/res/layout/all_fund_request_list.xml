<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input"
    android:layout_margin="4dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/all_fund_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/all_fund_request_user_name"
        android:layout_below="@id/all_fund_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/all_fund_request_user_id"
        android:layout_below="@id/all_fund_request_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/all_fund_request_rupees"
        android:layout_below="@id/all_fund_request_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/all_fund_request_date_added"
        android:layout_below="@id/all_fund_request_rupees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/all_fund_request_status"
        android:layout_below="@id/all_fund_request_date_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="5sp"
        android:layout_margin="5dp"/>

</RelativeLayout>