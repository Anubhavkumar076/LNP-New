<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input"
    android:layout_margin="4dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/view_pan_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_ref_id"
        android:layout_below="@id/view_pan_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_name"
        android:layout_below="@id/view_pan_card_ref_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_mode"
        android:layout_below="@id/view_pan_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_gender"
        android:layout_below="@id/view_pan_card_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_email"
        android:layout_below="@id/view_pan_card_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_kyc"
        android:layout_below="@id/view_pan_card_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_added_by"
        android:layout_below="@id/view_pan_card_kyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_user_name"
        android:layout_below="@id/view_pan_card_added_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_pan_card_date"
        android:layout_below="@id/view_pan_card_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:padding="5sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_below="@id/view_pan_card_date"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:padding="10dp"
            android:text="PAN Status"
            android:id="@+id/pan_status_button"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="2"/>

