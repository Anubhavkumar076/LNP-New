<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletFragment"
    android:padding="10dp">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:id="@+id/fragment_wallet_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/fragment_wallet_linear"
                android:background="@drawable/input"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_wallet_credit"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="#6DA3BC"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_wallet_debit"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="#6DA3BC"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@id/fragment_wallet_card"
        android:id="@+id/fragment_wallet_second_linear"
        android:background="@drawable/input"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_wallet_send"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#6DA3BC"
            android:text="Send Money"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_wallet_receive"
            android:textColor="@color/black"
            android:text="Add Money"
            android:layout_weight="1"
            android:background="#6DA3BC"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_wallet_view_request"
            android:text="View Request"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#6DA3BC"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/fragment_wallet_third_linear"
        android:layout_below="@id/fragment_wallet_second_linear">

        <TextView
            android:id="@+id/credit_wallet_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="15sp"
            android:padding="5sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/credit_wallet_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Txn Amount"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="5sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/credit_wallet_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="5sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler_list"
        android:layout_below="@id/fragment_wallet_third_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />


</RelativeLayout>