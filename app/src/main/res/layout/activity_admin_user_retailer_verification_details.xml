<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminUserRetailerVerificationDetails"
    android:background="@mipmap/background_trial">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/user_retailer_verification_details_aadhaar"
        android:padding="5dp"
        android:background="@drawable/select_image_foreground"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/user_retailer_verification_details_pan"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_below="@id/user_retailer_verification_details_aadhaar"
        android:background="@drawable/select_image_foreground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:padding="10dp"
            android:text="Approve"
            android:id="@+id/user_retailer_verification_details_approve_button"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:padding="10dp"
            android:text="Reject"
            android:id="@+id/user_retailer_verification_details_reject_button"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>