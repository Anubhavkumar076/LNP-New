<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PanStatusActivity"
    android:background="@color/screen_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/pan_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#212A5C"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="PAN STATUS"
            android:textSize="16sp"
            android:padding="5dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/pan_message"
            android:layout_below="@id/pan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/transaction_status"
            android:layout_below="@id/pan_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#212A5C"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="TRANSACTION STATUS"
            android:textSize="16sp"
            android:padding="5dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/pan_card_info_details_utr_no"
            android:layout_below="@id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/pan_card_info_details_ack_no"
            android:layout_below="@id/pan_card_info_details_utr_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/pan_card_info_details_amount"
            android:layout_below="@id/pan_card_info_details_ack_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/pan_card_info_details_status"
            android:layout_below="@id/pan_card_info_details_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/pan_card_info_details_added_date"
            android:layout_below="@id/pan_card_info_details_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"/>


    </RelativeLayout>

</RelativeLayout>