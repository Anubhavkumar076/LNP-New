<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input"
    android:layout_margin="4dp"
    android:padding="4dp">


    <TextView
        android:id="@+id/view_bbps_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_operator"
        android:layout_below="@id/view_bbps_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_number"
        android:layout_below="@id/view_bbps_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_amount"
        android:layout_below="@id/view_bbps_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_ref_id"
        android:layout_below="@id/view_bbps_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_mode"
        android:layout_below="@id/view_bbps_ref_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_category"
        android:layout_below="@id/view_bbps_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_user_id"
        android:layout_below="@id/view_bbps_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>
    <TextView
        android:id="@+id/view_bbps_user_name"
        android:layout_below="@id/view_bbps_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/view_bbps_date_added"
        android:layout_below="@id/view_bbps_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_below="@id/view_bbps_date_added"
        android:padding="10dp"
        android:text="BBPS Details"
        android:id="@+id/view_bbps_status"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_margin="5dp"/>


</RelativeLayout>