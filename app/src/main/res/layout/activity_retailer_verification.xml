<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RetailerVerificationActivity"
    android:background="@mipmap/background_trial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_dist"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/upload_pan_relative">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/upload_pan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Upload PAN"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/pan_image"
            android:background="@drawable/select_image_foreground"
            android:layout_below="@id/upload_pan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pan_image"
            android:id="@+id/select_pan_image_txt"
            android:text="SELECT PAN IMAGE"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_dist"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@id/upload_pan_relative"
        android:id="@+id/upload_aadhar_relative">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/upload_aadhar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Upload Aadhaar Card"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/aadhar_image"
            android:background="@drawable/select_image_foreground"
            android:layout_below="@id/upload_aadhar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aadhar_image"
            android:id="@+id/select_image_txt"
            android:text="SELECT AADHAR IMAGE"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/retailer_verification"
        android:text="You verification is in progress."
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_below="@id/upload_aadhar_relative"
        android:layout_centerHorizontal="true"
        android:text="UPLOAD Images"
        android:id="@+id/upload_verification_button"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_margin="10dp"/>

</RelativeLayout>